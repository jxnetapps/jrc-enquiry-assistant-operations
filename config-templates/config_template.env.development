RATE_LIMIT_REQUESTS=1000
RATE_LIMIT_PERIOD=3600

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================

# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=DEBUG

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# Answer Storage Type: 'auto' (postgresql -> sqlite), 'postgresql', or 'sqlite'
