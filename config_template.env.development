# Development Environment Configuration
# Copy this to .env.development for local development

# =============================================================================
# ENVIRONMENT IDENTIFICATION
# =============================================================================
ENVIRONMENT=development
DEBUG=true

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# Database Type: 'local' for FAISS, 'cloud' for Chroma Cloud
DATABASE_TYPE=local

# Local Database Configuration (FAISS)
CHROMA_DB_PATH=./chroma_db
COLLECTION_NAME=web_content_dev

# =============================================================================
# CHAT BEHAVIOR CONFIGURATION
# =============================================================================

# Chat Behavior: 'knowledge_base' or 'pre_trained'
CHAT_BEHAVIOR=knowledge_base

# =============================================================================
# ANSWER STORAGE CONFIGURATION
# =============================================================================

# Answer Storage Type: 'sqlite', 'mysql', or 'mssql'
ANSWER_STORAGE_TYPE=sqlite

# =============================================================================
# OPENAI CONFIGURATION
# =============================================================================

# OpenAI API Key (optional - app will work without it using local models)
# OPENAI_API_KEY=your_openai_api_key_here

# OpenAI Models
OPENAI_EMBEDDING_MODEL=text-embedding-ada-002
LLM_MODEL=gpt-3.5-turbo
LLM_TEMPERATURE=0.1
LLM_MAX_TOKENS=1000

# =============================================================================
# EMBEDDING CONFIGURATION
# =============================================================================

# Local embedding model (used when OpenAI is not available)
EMBEDDING_MODEL=all-MiniLM-L6-v2
EMBEDDING_BATCH_SIZE=32

# =============================================================================
# CRAWLING CONFIGURATION
# =============================================================================

# Crawling settings (reduced for development)
MAX_PAGES_TO_CRAWL=10
CRAWL_DEPTH=2
CRAWL_DELAY=0.5
MAX_CONCURRENT_REQUESTS=2
USER_AGENT=WebChatBot-Dev/2.0

# Content filtering
MIN_CONTENT_LENGTH=50
MAX_CONTENT_LENGTH=5000
CONTENT_QUALITY_THRESHOLD=0.3

# =============================================================================
# CHAT CONFIGURATION
# =============================================================================

# Similarity search settings
SIMILARITY_THRESHOLD=0.3
MAX_CONTEXT_LENGTH=2000
TOP_K_RESULTS=3

# =============================================================================
# SCHEDULING CONFIGURATION
# =============================================================================

# Enable/disable scheduled crawling
SCHEDULE_CRAWL=false
CRAWL_SCHEDULE=0 2 * * *  # Daily at 2 AM (cron format)

# =============================================================================
# AUTHENTICATION CONFIGURATION
# =============================================================================

# JWT Secret (development key - change in production!)
JWT_SECRET_KEY=dev_jwt_secret_key_change_in_production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_HOURS=24

# Default user credentials (development)
ADMIN_USERNAME=admin
ADMIN_PASSWORD=admin123
DEFAULT_USER_STATUS=active

# Auth mode: when true, allow any username/password for testing
ALLOW_ANY_USER=true

# =============================================================================
# POSTGRESQL CONFIGURATION
# =============================================================================

# PostgreSQL Configuration (development database)
POSTGRESQL_CONNECTION_URI=postgresql://postgres:Wildcat%40007@localhost:5432/jrc_chatbot_assistant_dev
POSTGRESQL_DATABASE_NAME=jrc_chatbot_assistant_dev
POSTGRESQL_CHAT_INQUIRY_TABLE=chat_inquiry_information

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================

# Server settings
HOST=0.0.0.0
PORT=8000
DEBUG=true

# =============================================================================
# RATE LIMITING CONFIGURATION
# =============================================================================

# Rate limiting settings (relaxed for development)
RATE_LIMIT_ENABLED=false
RATE_LIMIT_REQUESTS=1000
RATE_LIMIT_PERIOD=3600

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================

# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=DEBUG

# =============================================================================
# POSTGRESQL CONFIGURATION
# =============================================================================

# PostgreSQL Configuration (development database)
POSTGRESQL_CONNECTION_URI=postgresql://postgres:Wildcat%40007@localhost:5432/jrc_chatbot_assistant_dev
POSTGRESQL_DATABASE_NAME=jrc_chatbot_assistant_dev
POSTGRESQL_CHAT_INQUIRY_TABLE=chat_inquiry_information
