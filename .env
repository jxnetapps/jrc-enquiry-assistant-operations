# Web ChatBot Configuration Template
# Copy this file to .env and update with your actual values

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# Database Type: 'local' for FAISS, 'cloud' for Chroma Cloud
VECTOR_DATABASE_TYPE=local

# Local Database Configuration (FAISS)
CHROMA_DB_PATH=./chroma_db
COLLECTION_NAME=web_content

# Chroma Cloud Configuration (if using cloud database)
# Uncomment and fill in your Chroma Cloud credentials
# CHROMA_CLOUD_API_KEY=your_chroma_cloud_api_key_here
# CHROMA_CLOUD_TENANT_ID=your_tenant_id_here
# CHROMA_CLOUD_DATABASE_ID=your_database_id_here
# CHROMA_CLOUD_COLLECTION_NAME=web_content

# =============================================================================
# CHAT BEHAVIOR CONFIGURATION
# =============================================================================

# Chat Behavior: 'knowledge_base' or 'pre_trained'
# - knowledge_base: Traditional Q&A based on crawled content
# - pre_trained: Structured conversation flow with data collection
CHAT_BEHAVIOR=knowledge_base

# =============================================================================
# ANSWER STORAGE CONFIGURATION
# =============================================================================

# Answer Storage Type: 'auto' (postgresql -> sqlite), 'postgresql', or 'sqlite'
# 'auto' tries PostgreSQL first, falls back to SQLite if PostgreSQL fails
ANSWER_STORAGE_TYPE=sqlite

# =============================================================================
# OPENAI CONFIGURATION
# =============================================================================

# OpenAI API Key (optional - app will work without it using local models)
# OPENAI_API_KEY=your_openai_api_key_here

# OpenAI Models
OPENAI_EMBEDDING_MODEL=text-embedding-ada-002
LLM_MODEL=gpt-3.5-turbo
LLM_TEMPERATURE=0.1
LLM_MAX_TOKENS=1000

# =============================================================================
# EMBEDDING CONFIGURATION
# =============================================================================

# Local embedding model (used when OpenAI is not available)
EMBEDDING_MODEL=all-MiniLM-L6-v2
EMBEDDING_BATCH_SIZE=32

# =============================================================================
# CRAWLING CONFIGURATION
# =============================================================================

# Crawling settings
MAX_PAGES_TO_CRAWL=50
CRAWL_DEPTH=3
CRAWL_DELAY=1.0
MAX_CONCURRENT_REQUESTS=5
USER_AGENT=WebChatBot/2.0

# Content filtering
MIN_CONTENT_LENGTH=100
MAX_CONTENT_LENGTH=10000
CONTENT_QUALITY_THRESHOLD=0.5

# =============================================================================
# CHAT CONFIGURATION
# =============================================================================

# Similarity search settings
SIMILARITY_THRESHOLD=0.3
MAX_CONTEXT_LENGTH=4000
TOP_K_RESULTS=5

# =============================================================================
# SCHEDULING CONFIGURATION
# =============================================================================

# Enable/disable scheduled crawling
SCHEDULE_CRAWL=false
CRAWL_SCHEDULE=0 2 * * *  # Daily at 2 AM (cron format)

# =============================================================================
# AUTHENTICATION CONFIGURATION
# =============================================================================

# JWT Secret (change this in production!)
JWT_SECRET_KEY=your_jwt_secret_key_here
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_HOURS=24

# Default user credentials (change these in production!)
ADMIN_USERNAME=admin
ADMIN_PASSWORD=Wildcat@007
DEFAULT_USER_STATUS=active

# Auth mode: when true, allow any username/password for testing
ALLOW_ANY_USER=true

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================

# Server settings
HOST=0.0.0.0
PORT=8000
DEBUG=false

# =============================================================================
# RATE LIMITING CONFIGURATION
# =============================================================================

# Rate limiting settings
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_PERIOD=3600

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================

# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# =============================================================================
# POSTGRESQL CONFIGURATION
# =============================================================================

# PostgreSQL Configuration
POSTGRESQL_CONNECTION_URI=postgresql://postgres:password@localhost:5432/postgres
POSTGRESQL_DATABASE_NAME=jrc_chatbot_assistant
POSTGRESQL_CHAT_INQUIRY_TABLE=chat_inquiry_information

# =============================================================================
# EXAMPLE CONFIGURATIONS
# =============================================================================

# For local development with knowledge base mode:
# VECTOR_DATABASE_TYPE=local
# CHAT_BEHAVIOR=knowledge_base
# OPENAI_API_KEY=your_key_here

# For local development with pre-trained mode:
# VECTOR_DATABASE_TYPE=local
# CHAT_BEHAVIOR=knowledge_base
# OPENAI_API_KEY=your_key_here

# For production with Chroma Cloud and pre-trained mode:
# VECTOR_DATABASE_TYPE=cloud
# CHAT_BEHAVIOR=knowledge_base
# CHROMA_CLOUD_API_KEY=your_chroma_key_here
# CHROMA_CLOUD_TENANT_ID=your_tenant_id_here
# CHROMA_CLOUD_DATABASE_ID=your_database_id_here
# OPENAI_API_KEY=your_openai_key_here
