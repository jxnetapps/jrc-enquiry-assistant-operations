# Web ChatBot Configuration Template
# Copy this file to .env and update with your actual values

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# Database Type: 'local' for FAISS, 'cloud' for Chroma Cloud
DATABASE_TYPE=local

# Local Database Configuration (FAISS)
CHROMA_DB_PATH=./chroma_db
COLLECTION_NAME=web_content

# Chroma Cloud Configuration (if using cloud database)
# Uncomment and fill in your Chroma Cloud credentials
CHROMA_CLOUD_API_KEY=ck-7LCEr1E6bWFHdZYEgMqbo5B8xvTzri36W4v1YM6nENYW
CHROMA_CLOUD_TENANT_ID=5423c1e6-034c-4f1d-bac6-2e2f276a3344
CHROMA_CLOUD_DATABASE_ID=edifymanagement
CHROMA_CLOUD_COLLECTION_NAME=web_content

# =============================================================================
# CHAT BEHAVIOR CONFIGURATION
# =============================================================================

# Chat Behavior: 'knowledge_base' or 'pre_trained'
# - knowledge_base: Traditional Q&A based on crawled content
# - pre_trained: Structured conversation flow with data collection
CHAT_BEHAVIOR=knowledge_base

# =============================================================================
# OPENAI CONFIGURATION
# =============================================================================

# OpenAI API Key (optional - app will work without it using local models)
OPENAI_API_KEY=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
OPENAI_EMBEDDING_MODEL=text-embedding-ada-002

# OpenAI Models
OPENAI_EMBEDDING_MODEL=text-embedding-ada-002
LLM_MODEL=gpt-3.5-turbo
LLM_TEMPERATURE=0.1
LLM_MAX_TOKENS=1000

# =============================================================================
# EMBEDDING CONFIGURATION
# =============================================================================

# Local embedding model (used when OpenAI is not available)
EMBEDDING_MODEL=all-MiniLM-L6-v2
EMBEDDING_BATCH_SIZE=32

# =============================================================================
# CRAWLING CONFIGURATION
# =============================================================================

# Crawling settings
MAX_PAGES_TO_CRAWL=50
CRAWL_DEPTH=3
CRAWL_DELAY=1.0
MAX_CONCURRENT_REQUESTS=5

# Content filtering
MIN_CONTENT_LENGTH=100
MAX_CONTENT_LENGTH=10000
CONTENT_QUALITY_THRESHOLD=0.5

# =============================================================================
# CHAT CONFIGURATION
# =============================================================================

# Similarity search settings
SIMILARITY_THRESHOLD=0.3
MAX_CONTEXT_LENGTH=4000
TOP_K_RESULTS=5

# =============================================================================
# SCHEDULING CONFIGURATION
# =============================================================================

# Enable/disable scheduled crawling
SCHEDULE_CRAWL=false
CRAWL_SCHEDULE=0 2 * * *  # Daily at 2 AM (cron format)

# =============================================================================
# AUTHENTICATION CONFIGURATION
# =============================================================================

# JWT Secret (change this in production!)
JWT_SECRET_KEY=your_jwt_secret_key_here
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30

# Default user credentials (change these in production!)
DEFAULT_USERNAME=admin
DEFAULT_PASSWORD=admin

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================

# Server settings
HOST=0.0.0.0
PORT=8000
DEBUG=false

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================

# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# =============================================================================
# EXAMPLE CONFIGURATIONS
# =============================================================================

# For local development with knowledge base mode:
# DATABASE_TYPE=local
# CHAT_BEHAVIOR=knowledge_base
# OPENAI_API_KEY=your_key_here

# For local development with pre-trained mode:
# DATABASE_TYPE=local
# CHAT_BEHAVIOR=pre_trained
# OPENAI_API_KEY=your_key_here

# For production with Chroma Cloud and pre-trained mode:
# DATABASE_TYPE=cloud
# CHAT_BEHAVIOR=pre_trained
# CHROMA_CLOUD_API_KEY=your_chroma_key_here
# CHROMA_CLOUD_TENANT_ID=your_tenant_id_here
# CHROMA_CLOUD_DATABASE_ID=your_database_id_here
# OPENAI_API_KEY=your_openai_key_here
