# Production Environment Configuration
# Copy this to .env.production for production deployment

# =============================================================================
# ENVIRONMENT IDENTIFICATION
# =============================================================================
ENVIRONMENT=production
DEBUG=false

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# Database Type: 'local' for FAISS, 'cloud' for Chroma Cloud
DATABASE_TYPE=cloud

# Local Database Configuration (FAISS) - fallback
CHROMA_DB_PATH=/var/lib/webchatbot/chroma_db
COLLECTION_NAME=web_content

# Chroma Cloud Configuration (production)
CHROMA_CLOUD_API_KEY=your_production_chroma_cloud_api_key
CHROMA_CLOUD_TENANT_ID=your_production_tenant_id
CHROMA_CLOUD_DATABASE_ID=your_production_database_id
CHROMA_CLOUD_COLLECTION_NAME=web_content

# =============================================================================
# CHAT BEHAVIOR CONFIGURATION
# =============================================================================

# Chat Behavior: 'knowledge_base' or 'pre_trained'
CHAT_BEHAVIOR=knowledge_base

# =============================================================================
# ANSWER STORAGE CONFIGURATION
# =============================================================================

# Answer Storage Type: 'sqlite', 'mysql', or 'mssql'
ANSWER_STORAGE_TYPE=postgresql

# =============================================================================
# OPENAI CONFIGURATION
# =============================================================================

# OpenAI API Key (required for production)
OPENAI_API_KEY=your_production_openai_api_key

# OpenAI Models
OPENAI_EMBEDDING_MODEL=text-embedding-ada-002
LLM_MODEL=gpt-4
LLM_TEMPERATURE=0.1
LLM_MAX_TOKENS=2000

# =============================================================================
# EMBEDDING CONFIGURATION
# =============================================================================

# Local embedding model (fallback)
EMBEDDING_MODEL=all-MiniLM-L6-v2
EMBEDDING_BATCH_SIZE=64

# =============================================================================
# CRAWLING CONFIGURATION
# =============================================================================

# Crawling settings (production optimized)
MAX_PAGES_TO_CRAWL=500
CRAWL_DEPTH=5
CRAWL_DELAY=2.0
MAX_CONCURRENT_REQUESTS=10
USER_AGENT=WebChatBot-Prod/2.0

# Content filtering
MIN_CONTENT_LENGTH=200
MAX_CONTENT_LENGTH=15000
CONTENT_QUALITY_THRESHOLD=0.7

# =============================================================================
# CHAT CONFIGURATION
# =============================================================================

# Similarity search settings
SIMILARITY_THRESHOLD=0.4
MAX_CONTEXT_LENGTH=6000
TOP_K_RESULTS=8

# =============================================================================
# SCHEDULING CONFIGURATION
# =============================================================================

# Enable/disable scheduled crawling
SCHEDULE_CRAWL=true
CRAWL_SCHEDULE=0 2 * * *  # Daily at 2 AM (cron format)

# =============================================================================
# AUTHENTICATION CONFIGURATION
# =============================================================================

# JWT Secret (CHANGE THIS IN PRODUCTION!)
JWT_SECRET_KEY=your_super_secure_production_jwt_secret_key_here
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_HOURS=8

# Default user credentials (CHANGE THESE IN PRODUCTION!)
ADMIN_USERNAME=admin
ADMIN_PASSWORD=your_secure_admin_password_here
DEFAULT_USER_STATUS=active

# Auth mode: disabled in production
ALLOW_ANY_USER=false

# =============================================================================
# POSTGRESQL CONFIGURATION
# =============================================================================

# PostgreSQL Configuration (production database)
POSTGRESQL_CONNECTION_URI=postgresql://username:password@production-db-host:5432/jrc_chatbot_assistant
POSTGRESQL_DATABASE_NAME=jrc_chatbot_assistant
POSTGRESQL_CHAT_INQUIRY_TABLE=chat_inquiry_information

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================

# Server settings
HOST=0.0.0.0
PORT=8000
DEBUG=false

# =============================================================================
# RATE LIMITING CONFIGURATION
# =============================================================================

# Rate limiting settings (strict for production)
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_PERIOD=3600

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================

# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# =============================================================================
# POSTGRESQL CONFIGURATION
# =============================================================================

# PostgreSQL Configuration (production database)
POSTGRESQL_CONNECTION_URI=postgresql://username:password@production-db-host:5432/jrc_chatbot_assistant
POSTGRESQL_DATABASE_NAME=jrc_chatbot_assistant
POSTGRESQL_CHAT_INQUIRY_TABLE=chat_inquiry_information

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================

# CORS settings for production
CORS_ORIGINS=https://yourdomain.com,https://www.yourdomain.com
CORS_CREDENTIALS=true

# SSL/TLS settings
SSL_CERT_PATH=/path/to/ssl/cert.pem
SSL_KEY_PATH=/path/to/ssl/private.key
